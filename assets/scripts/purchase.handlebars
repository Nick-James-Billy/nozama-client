<div class="purchase center-block" data-value={{_id}}>
  <table class="purchase-table">
    <tr>
      <td>Item</td>
      <td>Price</td>
      <td>Quantity</td>
    </tr>

    {{#each items}}
      <tr>
        {{> purchased-item}}
      </tr>
    {{/each}}

    <tr>
      <td>Total: ${{total}}</td>
      <td><button type="button" class="btn btn-success btn-xs remove-to-cart" data-item-id="{{_id}}">remove</button></td>
    </tr>
  </table>
</div>
